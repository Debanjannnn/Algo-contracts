import { Contract, GlobalState, uint64 } from '@algorandfoundation/algorand-typescript'

export class Penalty extends Contract {
  yellow = GlobalState<uint64>({ key: "yellow", initialValue: 0 })
  red = GlobalState<uint64>({ key: "red", initialValue: 0 })

  giveCard(type: string): string {
    if (type === "yellow") this.yellow.value += 1
    else if (type === "red") this.red.value += 1
    else return "invalid"
    return "card given"
  }
}
